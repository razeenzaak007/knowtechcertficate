{
  "entities": {
    "Recipient": {
      "title": "Recipient",
      "type": "object",
      "description": "Represents a certificate recipient imported from an Excel file.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the recipient."
        },
        "fullName": {
          "type": "string",
          "description": "The full name of the certificate recipient."
        },
        "age": {
          "type": "number",
          "description": "The age of the recipient."
        },
        "bloodGroup": {
          "type": "string",
          "description": "The blood group of the recipient."
        },
        "gender": {
          "type": "string",
          "description": "The gender of the recipient."
        },
        "job": {
          "type": "string",
          "description": "The job of the recipient."
        },
        "areaInKuwait": {
          "type": "string",
          "description": "The area in Kuwait where the recipient resides."
        },
        "whatsappNumber": {
          "type": "string",
          "description": "The WhatsApp number of the certificate recipient."
        },
        "emailAddress": {
          "type": "string",
          "format": "email",
          "description": "The email address of the recipient."
        },
        "registeredAt": {
          "type": "string",
          "description": "The registration timestamp."
        },
        "checkedInAt": {
          "type": "string",
          "description": "The check-in timestamp."
        },
        "status": {
          "type": "string",
          "enum": [
            "Pending",
            "Generating",
            "Generated",
            "Verifying",
            "Sending",
            "Sent",
            "Failed"
          ]
        },
        "downloadLink": {
          "type": "string",
          "format": "uri"
        },
        "userId": {
          "type": "string",
          "description": "The ID of the user who owns this recipient."
        }
      },
      "required": [
        "fullName",
        "whatsappNumber",
        "userId"
      ]
    },
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user of the application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        }
      },
      "required": [
        "id",
        "email"
      ]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "collections": {
      "/recipients/{recipientId}": {
        "schema": {
          "$ref": "#/backend/entities/Recipient"
        },
        "description": "Stores recipient data. The userId field enforces ownership."
      },
      "/users/{userId}": {
        "schema": {
          "$ref": "#/backend/entities/User"
        },
        "description": "Stores user profiles."
      }
    }
  }
}
